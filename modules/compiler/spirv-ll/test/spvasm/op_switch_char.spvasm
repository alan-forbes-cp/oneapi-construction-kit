; RUN: %if online-spirv-as %{ spirv-as --target-env %spv_tgt_env -o %spv_file_s %s %}
; RUN: %if online-spirv-as %{ spirv-val %spv_file_s %}
; RUN: spirv-ll-tool -a OpenCL -b 64 -c Int8 %spv_file_s | FileCheck %s
               OpCapability Kernel
               OpCapability Addresses
               OpCapability Int8
               OpMemoryModel Physical64 OpenCL
               OpEntryPoint Kernel %main "main"
               OpName %main "main"
               OpName %cond "cond"
               OpName %a "a"
               OpName %res "res"
       %void = OpTypeVoid
          %3 = OpTypeFunction %void
       %uint = OpTypeInt 32 0
       %char = OpTypeInt 8 0
%_ptr_Function_int = OpTypePointer Function %uint
%_ptr_Function_char = OpTypePointer Function %char
     %int_42 = OpConstant %uint 42
     %int_24 = OpConstant %uint 24
    %char_42 = OpConstant %char 42
       %main = OpFunction %void None %3
          %5 = OpLabel
       %cond = OpVariable %_ptr_Function_char Function
          %a = OpVariable %_ptr_Function_int Function
        %res = OpVariable %_ptr_Function_int Function
               OpStore %cond %char_42
         %10 = OpLoad %char %cond
               OpSelectionMerge %13 None
               OpSwitch %10 %12 42 %11
         %12 = OpLabel
               OpStore %a %int_24
               OpBranch %13
         %11 = OpLabel
               OpStore %a %int_42
               OpBranch %13
         %13 = OpLabel
         %19 = OpLoad %uint %a
         %20 = OpBitwiseXor %uint %19 %int_42
               OpStore %res %20
               OpReturn
               OpFunctionEnd
; CHECK: define spir_kernel void @main()
; CHECK: [[COND:%.*]] = alloca i8
; CHECK: [[A:%.*]] = alloca i32
; CHECK: store i8 42, ptr [[COND]]
; CHECK: [[LD_COND:%.*]] = load i8, ptr [[COND]]
; CHECK: switch i8 [[LD_COND]], label %[[DEFAULT:[0-9]]] [
; CHECK: i8 42, label %[[CASE:[0-9]]]
; CHECK: [[DEFAULT]]:
; CHECK: store i32 24, ptr [[A]]
; CHECK: br label [[END:%.*]]
; CHECK: [[CASE]]:
; CHECK: store i32 42, ptr [[A]]
; CHECK: br label [[END]]
; CHECK: [[LD_A:%.*]] = load i32, ptr [[A]]
; CHECK: [[XOR_A:%.*]] = xor i32 [[LD_A]], 42
; CHECK: store i32 [[XOR_A]], ptr {{%.*}}
; CHECK ret void
